    "version": "0.2.0",
    "configurations": [
        
        
        {
            "command": "npm run start:debug",
            "name": "Run npm start:debug",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Docker: Attach to Node",
            "localRoot": "${workspaceRoot}", // Path within host (i.e. "/Users/../server"),
            "remoteRoot": "/usr/src/app" // Path withing Docker container
        },
        {
            "name": "Attach to Process",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "192.168.1.122",
            "protocol": "auto",
            "localRoot": "${workspaceRoot}", // Path within host (i.e. "/Users/../server"),
            "remoteRoot": "/usr/src/app" // Path withing Docker container
        }
    ]
}